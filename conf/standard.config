// Enable use of Singularity to run containers
singularity {
  enabled = true
  autoMounts = true
  autoCleanUp = true
}

executor {
  submitRateLimit = '3 / 1min'
}

process {
  // These are default values used for anything not specified with a label.
  cpus = 32
  memory = 8.GB

  withLabel: download {
    errorStrategy = "retry"
    maxRetries = 5
  }

  withLabel: small_task {
    cpus = 1
    memory = 1.GB
  }

  withLabel: medium_task {
    cpus = 4
    memory = 3.GB
  }

  withLabel: biggish_task {
    cpus = 4
    memory = 6.GB
  }

  withLabel: big_task {
    cpus = 4
    memory = 6.GB
  }
}
